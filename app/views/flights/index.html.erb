<style>
@import url('https://fonts.googleapis.com/css?family=Quicksand');
</style>
<style>
@import url('https://fonts.googleapis.com/css?family=VT323');
</style>
<header>
  <div class="navbar">
    <img class="logo_pic" src="https://image.flaticon.com/icons/svg/929/929900.svg" alt="">
    <div class="dropdown">
      <button class="dropbtn">Menu
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <a href="/home">Home</a>
        <a href="/customers/<%= current_user.id %>/edit" >My profile</a>
        <a href="/customer_tickets/:id">My flights</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
</header>
<h1>All Flights' name</h1>
<table>
  <tr>
    <th>Departure City</th>
    <th>Arrival City</th>
    <th>Departure Date</th>
  </tr>

    <% @flights.each do |f| %>
  <tr>
      <td><%= f.departure_city %></td>
      <td><%= f.arrival_city %></td>
      <td><%= f.departure_date %></td>
  </tr>
  <% end %>
</table>
