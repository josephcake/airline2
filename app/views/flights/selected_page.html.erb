<style>
@import url('https://fonts.googleapis.com/css?family=Quicksand');
</style>
<header>
  <div class="nav">
    <ul>
      <li class="home"><a href="#">Home</a></li>
      <li class="tutorials"><a class="active" href="#">Tutorials</a></li>
      <li class="about"><a href="#">About</a></li>
      <li class="news"><a href="#">Newsletter</a></li>
      <li class="contact"><a href="#">Contact</a></li>
    </ul>
  </div>
</header>
<% @@user = Customer.find(session[:customer_id]) %>
<form class="selected_page" action="/customers/ticket/<%= @flight.id %>" method="post">
  <table>
    <tr>
      <td><%= @@user.first_name %></td>
      <td><%= @@user.last_name %></td>
    </tr>
    <tr>
      <td><%= @flight.departure_city %></td>
      <td><%= @flight.departure_time %>:00</td>
    </tr>
    <tr>
      <td><%= @flight.arrival_city %></td>
      <td><%= @flight.arrival_time %>:00</td>
    </tr>
    <tr>
      <td><%= @flight.departure_date %></td>
    </tr>
  </table>
  <button type="submit" class="select_button">Buy This Flight</button>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
