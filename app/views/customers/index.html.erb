<style>
@import url('https://fonts.googleapis.com/css?family=VT323');
</style>
<style>
@import url('https://fonts.googleapis.com/css?family=Quicksand');
</style>
<header>
  <div class="navbar">
    <img class="logo_pic" src="https://image.flaticon.com/icons/svg/929/929900.svg" alt="">
    <div class="dropdown">
      <button class="dropbtn">Menu
        <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
        <a href="/home">Home</a>
        <a href="/customers/<%= current_user.id %>/edit" >My profile</a>
        <a href="/customer_tickets/:id">My flights</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
</header>

<h1>List of all customers</h1>
<h3>...change to login screen later</h3>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Passport</th>
  </tr>

  <% @customers.each do |cus| %>
  <tr>
    <td><%= cus.first_name %></td>
    <td><%= cus.last_name %></td>
    <td><%= cus.passport %></td>
  </tr>
  <% end %>
</table>
